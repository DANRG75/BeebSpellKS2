   10 REM DANRG75 KS2 SPELLING TEST
   20 MODE 7:VDU23;11;0;0;0;
   30 PRINTTAB(0,1);CHR$(132);CHR$(157);CHR$(131);CHR$(141);"        READ, COVER, TYPE!"
   40 PRINTTAB(0,2);CHR$(132);CHR$(157);CHR$(131);CHR$(141);"        READ, COVER, TYPE!"
   50 VDU 28,1,20,32,4
   60 DIM word$(217)
   70 FOR x=1 TO 217
   80 READ word$(x)
   90 NEXT x
  100 right=0
  110 FOR x=1 TO 10
  120 r=RND(160)
  
  121 REM PROCread
  122 CLS
  130 PRINTTAB(0,0) "READ:";CHR$(RND(6)+129);word$(r)
  140 PRINTTAB(0,10) CHR$(132);CHR$(157);CHR$(131);"     press <SPACE> to cover"
  150 REPEAT UNTIL GET=32
  155 REM ENDPROC
  160 VDU 12
  
  165 REM PROCtype
  170 PRINT "TYPE";
  180 INPUT answer$:
  181 PRINT " ";
  190 IF answer$=word$(r) THEN PROCyes ELSE PROCno
  200 NEXT x
  210 PRINT "You got ";right; "/ 10 correct"
  220 END
  
  230 DEF PROCyes
  231 CLS
  240 VDU 12
  250 PRINTTAB(0,0) "Well done!";CHR$(RND(6)+129); word$(r);CHR$(135);"is right!"
  260 right=right+1
  270 PRINTTAB(0,10) CHR$(132);CHR$(157);CHR$(131);"        press <SPACE> "
  280 REPEAT UNTIL GET=32
  290 ENDPROC
  
  300 DEF PROCno
  310 PRINT "No:";CHR$(RND(6)+129); answer$;CHR$(135);"is";CHR$(RND(6)+129);word$(r)
  312 PRINTTAB(0,10) CHR$(132);CHR$(157);CHR$(131);"        press <SPACE> "
  313 REPEAT UNTIL GET=32
  314 REM: Store word$(r) in $wrong array
  320 ENDPROC
  
